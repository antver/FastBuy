<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/humo_suave"
    tools:context="com.fastbuyapp.omar.fastbuy.FragmentListaProductos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/rsst"
            android:id="@+id/imageViewPortada"
            android:scaleType="centerCrop"
            android:layout_height="85dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgPerfil"
                android:adjustViewBounds="false"
                android:layout_width="100dp" />

        </LinearLayout>

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/btnCarta"
            android:drawableLeft="@android:drawable/sym_action_email"
            android:layout_width="55dp"
            android:layout_below="@+id/imageViewPortada"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablaListaProductos"
        android:columnWidth="400dip"
        android:gravity="center"
        android:numColumns="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:padding="0dp"
        >

    </GridView>
</LinearLayout>
