<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistorialPedidosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/shadow_perfil"
            android:layout_width="match_parent"
            android:id="@+id/btnHistorialPedidos"
            android:layout_marginVertical="10dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/pedidos" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:text="Historial de pedidos"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingTop="9dp">

        <TextView
            android:id="@+id/txtEnCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shadow_perfil"
            android:drawableRight="@drawable/ic_chevron_left_black_24dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="Pedidos en curso"
            android:textSize="18sp"
            android:textStyle="bold" />

        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dtgvHistorialPedidos"
            android:numColumns="1"
            android:visibility="gone"
            android:layout_marginBottom="60dp"/>

        <TextView
            android:id="@+id/txtFinalizados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shadow_perfil"
            android:drawableRight="@drawable/ic_chevron_left_black_24dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="Pedidos finalizados"
            android:textSize="18sp"
            android:textStyle="bold" />

        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dtgvHistorialPedidosAtendidos"
            android:numColumns="1"
            android:visibility="gone"
            android:layout_marginBottom="60dp"/>

        <TextView
            android:id="@+id/txtCancelados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shadow_perfil"
            android:drawableRight="@drawable/ic_chevron_left_black_24dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="Pedidos cancelados"
            android:textSize="18sp"
            android:textStyle="bold" />

        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dtgvHistorialPedidosCancelados"
            android:numColumns="1"
            android:visibility="gone"
            android:layout_marginBottom="60dp"/>

        <!--<Button
            android:id="@+id/btnCargarMas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Cargar mÃ¡s..."
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:textSize="16sp"
            android:background="@drawable/boton_rojo"
            android:layout_marginTop="-50dp"
            android:layout_marginHorizontal="80dp"
            android:layout_gravity="center_horizontal"/>-->
    </LinearLayout>

    <!--Start MmenuPrincipal-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#999"
        android:layout_height="50dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnHome"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_shop_n" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnFavoritos"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_heart"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnCarrito"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_cart_shop"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnUsuario"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_user_circle_o"
            android:tint="@color/fastbuy" />
    </LinearLayout>
    </LinearLayout>
    <!--End MmenuPrincipal-->
</LinearLayout>