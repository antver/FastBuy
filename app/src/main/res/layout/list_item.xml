<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/blanco"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:background="#F8F8F8"
        android:layout_marginBottom="3dp"
        android:padding="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:background="@color/toolbarTransparent">

            <ImageView
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgEmpresas2"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:text="Nombre_Empresa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtNombreEmpresa"
                        android:textColor="@color/gris"
                        android:textAllCaps="true"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="13sp"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Descripcion de empresa"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtDescripcion"
                        android:textColor="@color/gris"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_width="match_parent"
                        android:textSize="11sp"
                        android:layout_weight="1" />
                </LinearLayout>

                <TextView
                    android:text="Abierto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblEstadoAbierto"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/fastbuy"
                    android:background="@color/etiqueta"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="3dp"
                    android:textSize="10sp"
                    android:layout_marginRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="right">

                <!--<TextView
                    android:text="4.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView21"
                    android:gravity="center_vertical"
                    android:textColor="@color/humo_gris"
                    android:drawableLeft="@android:drawable/star_off"
                    android:textSize="12sp"
                    android:layout_weight="0.7" />-->

                <TextView
                    android:text="Recomendar"
                    android:layout_height="match_parent"
                    android:id="@+id/btnRecomendarEstablecimiento"
                    android:background="#F8F8F8"
                    android:textAllCaps="false"
                    android:textColor="@color/gris"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_menu_share"
                    android:textSize="10sp"
                    android:layout_width="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>