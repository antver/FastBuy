<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/imgproducto"
                tools:srcCompat="@drawable/rsst" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/txtNombreProdPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:paddingRight="10dp"
                android:text="Producto 1"
                android:textColor="@color/humo6"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCantidadProdPedido"
                android:text="01 UNIDAD"
                android:textColor="@color/humo6"
                android:textSize="11sp"/>


            <TextView
                android:text="S/ 0.00"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/txtSubtotalProdPedido"
                android:textStyle="bold"
                android:gravity="bottom"
                android:textColor="@color/humo6"
                android:textSize="14sp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>