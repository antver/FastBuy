<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_verificacion_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fastbuyapp.omar.fastbuy.VerificacionLoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:layout_width="178dp"
                android:layout_height="169dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView2"
                android:padding="25dp"
                app:srcCompat="@drawable/phone" />

            <TextView
                android:text="Ingresa tu código de verificación"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblIngresaCodigo"
                android:layout_weight="0.00"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:text="Se enviará un código de verificación a su teléfono movil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblDescripcion"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="6"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/llNumeros">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:ems="10"
                    android:layout_margin="2dp"
                    android:background="@drawable/caracter"
                    android:id="@+id/edNum1"
                    android:layout_weight="1"
                    android:maxLength="1"
                    android:textSize="22sp"
                    android:textAlignment="center" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:background="@drawable/caracter"
                    android:layout_margin="2dp"
                    android:maxLength="1"
                    android:id="@+id/edNum2"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:inputType="number" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:layout_margin="2dp"
                    android:background="@drawable/caracter"
                    android:ems="10"
                    android:id="@+id/edNum3"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="22sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/caracter"
                    android:ems="10"
                    android:layout_margin="2dp"
                    android:id="@+id/edNum4"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="22sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:layout_margin="2dp"
                    android:background="@drawable/caracter"
                    android:ems="10"
                    android:maxLength="1"
                    android:id="@+id/edNum5"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="22sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:ems="10"
                    android:layout_margin="2dp"
                    android:background="@drawable/caracter"
                    android:maxLength="1"
                    android:id="@+id/edNum6"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:text="Volver a enviar código"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblReenviar"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_margin="10dp" />

            <Button
                android:text="Siguiente"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textColor="@color/blanco"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/botongris"
                android:id="@+id/btnSiguiente"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:textAllCaps="false" />

            <!--<android.inputmethodservice.KeyboardView
                android:id="@+id/keyboardview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone"
                />-->
        </LinearLayout>
    </ScrollView>



</LinearLayout>
