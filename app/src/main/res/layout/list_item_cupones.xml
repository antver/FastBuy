<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearItemHistorialPedidos"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow"
        android:layout_marginBottom="2dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDescripcionCupon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-thin"
                android:gravity="left"
                android:maxLines="2"
                android:paddingRight="10dp"
                android:text="Cupon de descuento de delivery"
                android:textColor="@color/gris"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:paddingRight="10dp"
                android:text="Valido desde "
                android:textColor="@color/gris"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtFechaCaducidadCupon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:gravity="left"
                android:paddingRight="10dp"
                android:text="2020/01/31"
                android:textColor="@color/gris"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="CÃ³digo"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/txtCodigoCupon"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="AJZGS2"
                    android:background="@drawable/botonverdecircular"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/blanco"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtStockCupon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/botonverdecircular"
                    android:fontFamily="sans-serif-condensed"
                    android:text="30"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/blanco"
                    android:textSize="20sp"
                    android:layout_gravity="right"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>