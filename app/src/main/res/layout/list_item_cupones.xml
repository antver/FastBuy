<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/humo4"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearItemHistorialPedidos"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blanco"
        android:layout_marginBottom="2dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtCodigoCupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="AJZGS2"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/gris"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/txtStockCupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="30"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/gris"
                    android:textSize="20sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtDescripcionCupon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed"
                android:text="Cupon de descuento de delivery"
                android:maxLines="2"
                android:paddingRight="10dp"
                android:textColor="@color/gris"
                android:textSize="14sp"
                android:gravity="left"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Valido desde "
                    android:paddingRight="10dp"
                    android:textColor="@color/gris"
                    android:textSize="14sp"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/txtFechaCaducidadCupon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:text="2020/01/31"
                    android:paddingRight="10dp"
                    android:textColor="@color/gris"
                    android:textSize="14sp"
                    android:gravity="left"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>