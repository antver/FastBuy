<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_establecimiento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.fastbuyapp.omar.fastbuy.EstablecimientoActivity">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanco"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:background="@color/blanco"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:layout_weight="2" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnMosaico"
                android:textColor="@color/fastbuy"
                android:tint="@color/fastbuy"
                android:supportsRtl="true"
                android:layout_weight="0.15"
                android:background="@color/blanco"
                app:srcCompat="@drawable/ic_th_large_solid2"
                android:padding="3dp" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnLista"
                android:tint="@color/humo"
                android:layout_weight="0.15"
                android:background="@color/blanco"
                app:srcCompat="@drawable/ic_format_list_bulleted_black_24dp"
                android:padding="3dp" />

            <!--<ImageButton
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnBuscar"
                android:tint="@color/humo"
                android:background="@color/blanco"
                android:layout_weight="0.15"
                app:srcCompat="@drawable/ic_search_black_24dp"
                android:padding="3dp" />-->
        </LinearLayout>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gvLista"
            android:numColumns="1"/>
    </LinearLayout>

    <!--Start MmenuPrincipal-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#999"
        android:layout_height="50dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnHome"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            android:tint="@color/fastbuy"
            app:srcCompat="@drawable/ic_shop_n" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnFavoritos"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_heart"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnCarrito"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_cart_shop"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnUsuario"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_user_circle_o"/>
    </LinearLayout>
    <!--End MmenuPrincipal-->

</LinearLayout>
