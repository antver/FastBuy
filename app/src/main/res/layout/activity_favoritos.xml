<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_favoritos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fastbuyapp.omar.fastbuy.FavoritosActivity">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar" />

    <!--<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MergeRootFrame" >



    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->

    <!-- Start No tiene Favoritos-->
    <LinearLayout
        android:id="@+id/linearFavoritoVacio"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_fileName="favorite.json"
            app:lottie_loop="true"
            android:layout_gravity="center_horizontal"
            app:lottie_autoPlay="true"
            android:layout_margin="0dp"
            android:scaleType="fitXY"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <TextView
            android:text="Aún no cuentas con favoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLoSentimos"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_weight="0.00"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="-50dp" />

        <TextView
            android:text="Aqui encontrarás tus establecimientos más frecuentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtComprueba"
            android:textAlignment="center"
            android:textSize="15sp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp" />
    </LinearLayout>
    <!-- End No tiene Favoritos-->

    <!--Start Favoritos-->
    <LinearLayout
        android:id="@+id/linearContenidoFavoritos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/linearPromocionesFav"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/amarillo"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:text=" Promociones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtPromocionesFav"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:textColor="@color/blanco"
                        android:drawableLeft="@drawable/ic_local_offer_black_24dp"
                        android:drawableTint="@color/blanco"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:scrollbars="vertical"
                        android:id="@+id/rvPromocionesFav"
                        android:layout_height="match_parent" />

                </LinearLayout>
            </LinearLayout>
            <GridView
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gvListaFav"
                android:numColumns="1"/>


        </LinearLayout>
    </LinearLayout>
    <!--End Favoritos-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#999"
        android:layout_height="50dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnHome"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_shop_n" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnFavoritos"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_heart"
            android:tint="@color/fastbuy" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnCarrito"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_cart_shop"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnUsuario"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_user_circle_o"/>
    </LinearLayout>

</LinearLayout>
