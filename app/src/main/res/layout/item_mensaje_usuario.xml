<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtFechaChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:background="@drawable/fondo_fecha_chat"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="6dp"
        android:layout_marginTop="7dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:text="23-03-2020"
        android:textAllCaps="false"
        android:textColor="@color/gris"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingLeft="50dp"
        android:paddingTop="7dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/mensaje_usuario"
            android:paddingHorizontal="15dp"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:paddingVertical="6dp">
            <TextView
                android:id="@+id/txtMensajeChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="right"
                android:layout_weight="1"
                android:text="este es mi mensaje"
                android:paddingRight="15dp"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txtHoraChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="12:13"
                android:layout_gravity="bottom"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:textSize="12sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgChat"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_usuario"/>
    </LinearLayout>

</LinearLayout>