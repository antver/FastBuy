<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearItemHistorialPedidos"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:layout_marginBottom="2dp"
        android:paddingHorizontal="10dp"
        android:weightSum="3"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/imglogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/tienda" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingHorizontal="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNumOrdenMiPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Orden Nº 000010"
                    android:textAllCaps="false"
                    android:textColor="@color/gris"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtMiPedidoE1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="D'Costumbre"
                    android:textColor="@color/gris"
                    android:textSize="14sp"
                    android:lines="1"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/txtEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Se entregó "
                    android:textAllCaps="false"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/botonverde"
                    android:textColor="@color/blanco"
                    android:gravity="left"
                    android:textSize="10sp" />
            </LinearLayout>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/txtMiPedidoE2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Chepen - Don Juan Café"
                        android:textColor="@color/gris"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:lines="1"
                        android:maxLines="1"/>
                </LinearLayout>-->

                <!--<TextView
                    android:id="@+id/btnVerDetalleMiPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-condensed"
                    android:text="   detalles de Pedido"
                    android:textColor="@color/gris"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/ic_eye_yellow"
                    android:gravity="center"/>
            </LinearLayout>-->
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtTotalMiPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="s/30.00"
                android:gravity="right"
                android:textAllCaps="false"
                android:textColor="@color/gris"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/txFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/botonverde"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:layout_gravity="right"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp"
                android:text="01/01/2020"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>