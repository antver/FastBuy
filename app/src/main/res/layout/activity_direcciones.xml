<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DireccionesActivity"
    android:background="@color/blanco">
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blanco"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="35dp"
        android:paddingVertical="10dp"
        android:background="@color/fastbuy">
        <TextView
            android:id="@+id/txtNameUserHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Juan Pérez Martinez"
            android:maxLines="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blanco"/>
        <TextView
            android:id="@+id/txtNumberUserHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_white"
            android:text="956823123"
            android:textSize="18sp"
            android:textColor="@color/blanco"/>
    </LinearLayout>
    <GridView
        android:id="@+id/gridMisDirecciones"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="25dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingHorizontal="35dp"
        android:gravity="center">
        <TextView
            android:id="@+id/btnNewDirec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Nueva Dirección"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_add_circle_black"
            android:textSize="16sp"
            android:textColor="@color/negro"/>
        <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Guardar"
            android:textSize="16sp"
            android:textColor="@color/blanco"
            android:textAllCaps="false"
            android:paddingHorizontal="40dp"
            android:background="@drawable/botonamarillocarta"/>-->
    </LinearLayout>

    <!--Start MmenuPrincipal-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#999"
        android:layout_height="50dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnHome"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_shop_n" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnFavoritos"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_heart"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnCarrito"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_cart_shop"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnUsuario"
            android:background="#e9e9e9"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_user_circle_o"
            android:tint="@color/fastbuy" />
    </LinearLayout>
    <!--End MmenuPrincipal-->
</LinearLayout>