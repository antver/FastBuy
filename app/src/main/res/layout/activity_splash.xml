<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context="com.fastbuyapp.omar.fastbuy.SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_height="350dp"
                android:layout_width="match_parent"
                app:lottie_fileName="LOGO5.json"
                android:scaleType="centerCrop"
                app:lottie_loop="false"
                app:lottie_speed="0.4"
                app:lottie_autoPlay="true"/>

            <!--<ImageView
                android:id="@+id/isotipo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/isotipo_fastbuy" />-->

            <!--<ImageView
                android:id="@+id/logotipo"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/logo_relieve" />
-->
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
