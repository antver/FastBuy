<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="250dp" />
            <gradient android:startColor="#99C1C1C1"
                android:gradientRadius="100%p"
                android:endColor="#22C1C1C1"
                android:type="radial">
            </gradient>
            <padding android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp">
            </padding>
        </shape>
    </item>
    <item android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/fastbuy"/>
            <corners android:radius="250dp" />
            <stroke android:width="3dp"
                android:color="#99C1C1C1">
            </stroke>
        </shape>
    </item>
</layer-list>